<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnRead"
        android:layout_width="148dp"
        android:layout_height="50dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="132dp"
        android:text="Read"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coursDuration" />

    <TextView
        android:id="@+id/TitlePage"
        android:layout_width="350dp"
        android:layout_height="39dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="52dp"
        android:text="Cette page affiche les dernieres données saisies"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="330dp"
        android:text="Nom : "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TitlePage" />

    <TextView
        android:id="@+id/coursName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="272dp"
        android:text="Nom du cours : "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mail" />

    <TextView
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="278dp"
        android:text="Adresse mail : "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/coursDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="265dp"
        android:text="Durée du cours : "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coursDesc" />

    <TextView
        android:id="@+id/coursDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="231dp"
        android:text="Description du cours : "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coursName" />

    <TextView
        android:id="@+id/editName"
        android:layout_width="188dp"
        android:layout_height="18dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="17dp"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/TitlePage" />

    <TextView
        android:id="@+id/editMail"
        android:layout_width="188dp"
        android:layout_height="18dp"
        android:layout_marginStart="74dp"
        android:textColor="@color/grey"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mail"
        app:layout_constraintTop_toBottomOf="@+id/editName" />

    <TextView
        android:id="@+id/editCoursName"
        android:layout_width="188dp"
        android:layout_height="18dp"
        android:layout_marginStart="67dp"
        android:textColor="@color/grey"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/coursName"
        app:layout_constraintTop_toBottomOf="@+id/editMail" />

    <TextView
        android:id="@+id/editCoursDesc"
        android:layout_width="188dp"
        android:layout_height="18dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="9dp"
        android:textColor="@color/grey"
        android:layout_marginEnd="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/coursDesc"
        app:layout_constraintTop_toBottomOf="@+id/editCoursName" />

    <TextView
        android:id="@+id/editCoursDuration"
        android:layout_width="188dp"
        android:layout_height="18dp"
        android:layout_marginStart="60dp"
        android:textColor="@color/grey"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/coursDuration"
        app:layout_constraintTop_toBottomOf="@+id/editCoursDesc" />

</androidx.constraintlayout.widget.ConstraintLayout>